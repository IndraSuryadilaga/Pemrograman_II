<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@application.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NewTournamentController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 8 16; -fx-background-color: #375999;">
            <Label styleClass="top-label" text="Buat Turnamen" textFill="WHITE">
            <font>
               <Font name="System Bold" size="24.0" />
            </font></Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 12 24;">
            
            <VBox spacing="12.0" styleClass="card">
                
                <VBox spacing="5">
                    <Label styleClass="field-label" text="Nama Turnamen">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font></Label>
                    <TextField fx:id="tfTournamentName" maxWidth="400" promptText="IT Cup 2025" style="-fx-padding: 8 16;" />
                </VBox>

                <VBox spacing="5">
                    <Label styleClass="field-label" text="Cabang Olahraga">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font></Label>
                    <ComboBox fx:id="cbSport" prefWidth="250" promptText="Pilih Cabang Pertandngan" style="-fx-padding: 4 8;" />
                </VBox>
            </VBox>

            <VBox styleClass="card" VBox.vgrow="ALWAYS">
                <Label styleClass="label-header" text="Pilih Tim Peserta (Minimal 4 Tim)">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
                <Label style="-fx-padding: 0 0 8 0;" text="Tahan tombol CTRL untuk memilih banyak tim sekaligus" textFill="#868686" />
                
                <ListView fx:id="listTeams" VBox.vgrow="ALWAYS" />
                
                <Label fx:id="lblSelectionCount" styleClass="label-header" text="0 Tim dipilih" />
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Button style="-fx-background-color: red; -fx-padding: 8 16; -fx-background-radius: 8;" text="Batal" textFill="WHITE" />
                <Button fx:id="btnGenerate" onAction="#handleGenerate" style="-fx-background-color: #375999; -fx-padding: 8 16; -fx-background-radius: 8;" styleClass="btn-primary" text="Generate Bracket" textFill="WHITE" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
