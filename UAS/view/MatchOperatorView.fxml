<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MatchOperatorController">

    <BorderPane style="-fx-background-color: #ecf0f1;">
        
        <top>
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
                <Label fx:id="lblTournamentName" text="Tournament Name" textFill="WHITE"/>
                
                <HBox alignment="CENTER" spacing="50">
                    <VBox alignment="CENTER">
                        <Label fx:id="lblHomeName" text="HOME" textFill="#3498db" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                        <Label fx:id="lblHomeScore" text="0" textFill="WHITE" style="-fx-font-size: 60px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <Label text="VS" textFill="GREY" style="-fx-font-size: 30px;"/>
                    
                    <VBox alignment="CENTER">
                        <Label fx:id="lblAwayName" text="AWAY" textFill="#e74c3c" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                        <Label fx:id="lblAwayScore" text="0" textFill="WHITE" style="-fx-font-size: 60px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
                
                <Button text="KEMBALI KE DASHBOARD" onAction="#handleBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>

                <Separator style="-fx-opacity: 0.5;"/>
                
                <Button fx:id="btnFinish" text="ðŸ AKHIRI PERTANDINGAN (FINISH)" onAction="#handleFinishMatch" 
        				style="-fx-background-color: #2c3e50; -fx-text-fill: #f1c40f; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-color: #f1c40f; -fx-border-width: 2; -fx-cursor: hand;"/>
                 </VBox>
        </top>

        <center>
            <HBox spacing="20" style="-fx-padding: 20;">
                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Pemain Home" style="-fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                         <FlowPane fx:id="fpHomePlayers" hgap="10" vgap="10"/>
                    </ScrollPane>
                </VBox>

                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Pemain Away" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                         <FlowPane fx:id="fpAwayPlayers" hgap="10" vgap="10"/>
                    </ScrollPane>
                </VBox>
            </HBox>
        </center>
    </BorderPane>

    <VBox fx:id="actionOverlay" visible="false" alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.8);">
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-max-width: 400;">
            
            <Label text="Pilih Aksi Pemain" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="lblSelectedPlayer" text="Michael Jordan #23" style="-fx-font-size: 14px; -fx-text-fill: grey;"/>
            
            <Separator/>
            <Label text="Mencetak Skor (Score)" style="-fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnScore1" text="+1 Poin" onAction="#handleActionScore1" style="-fx-base: #2ecc71; -fx-pref-width: 150;"/>
                <Button fx:id="btnScore2" text="+2 Poin" onAction="#handleActionScore2" style="-fx-base: #27ae60; -fx-pref-width: 150;"/>
            </HBox>
            <Button fx:id="btnScore3" text="+3 Poin" onAction="#handleActionScore3" style="-fx-base: #219150; -fx-pref-width: 310;"/>
            
			<Separator/>
            
            <Label text="Koreksi (Anulir Poin)" textFill="red" style="-fx-font-size: 10px;"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="-1" onAction="#handleCorrection1" style="-fx-base: #e74c3c; -fx-pref-width: 60;"/>
                <Button text="-2" onAction="#handleCorrection2" style="-fx-base: #e74c3c; -fx-pref-width: 60;"/>
                <Button text="-3" onAction="#handleCorrection3" style="-fx-base: #e74c3c; -fx-pref-width: 60;"/>
            </HBox>

            <Separator/>
            
            <Label text="Pelanggaran (Foul)" style="-fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Personal Foul" onAction="#handleActionFoul" style="-fx-base: #e74c3c; -fx-pref-width: 150;"/>
                <Button text="Technical Foul" style="-fx-base: #c0392b; -fx-pref-width: 150;"/>
            </HBox>

            <Separator/>
            <Button text="BATAL" onAction="#closeOverlay" style="-fx-base: #95a5a6; -fx-pref-width: 100;"/>
        </VBox>
    </VBox>

</StackPane>