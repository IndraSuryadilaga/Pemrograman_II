<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.TeamController"
            stylesheets="@application.css"
            minWidth="1000"
            minHeight="650">
    
    <top>
        <HBox styleClass="header-container" alignment="CENTER_LEFT">
            <Label text="SPORTA - Team Management" styleClass="top-label"/>
        </HBox>
    </top>

    <left>
        <VBox styleClass="form-container" spacing="5" prefWidth="350">
            
            <Label text="Form Data Tim" styleClass="label-header"/>
            
            <VBox spacing="5">
                <Label text="Nama Tim" styleClass="field-label"/>
                <TextField fx:id="tfName" promptText="Contoh: Garuda Indonesia" style="-fx-pref-height: 35;"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Logo Path" styleClass="field-label"/>
                <TextField fx:id="tfLogo" promptText="/assets/logo.png" style="-fx-pref-height: 35;"/>
            </VBox>
            
            <Region prefHeight="10"/> 
            
            <HBox spacing="15">
                <Button text="Simpan / Update" fx:id="btnSave" onAction="#handleSave" 
                        maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Button text="Hapus" fx:id="btnDelete" onAction="#handleDelete"
                        minWidth="100"/>
            </HBox>
            
            <Label text="* Pilih baris pada tabel untuk mengedit data." 
                   wrapText="true" 
                   style="-fx-font-size: 12px; -fx-text-fill: #95a5a6; -fx-padding: 10 0 0 0;"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-padding: 25;">
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Daftar Tim Terdaftar" styleClass="label-header" 
                       style="-fx-border-width: 0 0 2 0; -fx-border-color: #3498db;"/>
                <Region HBox.hgrow="ALWAYS" /> 
                <Label text="Total: 0 Tim" fx:id="lblTotalCount" style="-fx-text-fill: #7f8c8d;"/>
            </HBox>
            
            <TableView fx:id="tableTeams" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                
                <columns>
                    <TableColumn fx:id="colId" text="ID" 
                                 prefWidth="60" maxWidth="60" minWidth="60" 
                                 resizable="false"
                                 style="-fx-alignment: CENTER;"/> 
                    
                    <TableColumn fx:id="colName" text="Nama Tim"/>
                    <TableColumn fx:id="colLogo" text="Logo Path"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>