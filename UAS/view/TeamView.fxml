<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<SplitPane dividerPositions="0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TeamController">
    
    <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
        <Label text="Data Tim" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TableView fx:id="tableTeams" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTeamName" text="Nama Tim" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Separator/>
        
        <Label text="Form Tim"/>
        <TextField fx:id="tfTeamName" promptText="Nama Tim Baru"/>
        
        <HBox spacing="10">
            <Button text="Tambah" onAction="#addTeam" style="-fx-base: #2ecc71;"/>
            <Button text="Update" onAction="#updateTeam" style="-fx-base: #f1c40f;"/>
            <Button text="Hapus" onAction="#deleteTeam" style="-fx-base: #e74c3c;"/>
            <Button text="Clear" onAction="#clearTeamForm"/>
        </HBox>
    </VBox>

    <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white;">
        <Label text="Data Pemain" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="lblSelectedTeam" text="Pilih tim di sebelah kiri..." textFill="grey" style="-fx-font-style: italic;"/>
        
        <TableView fx:id="tablePlayers" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colPlayerName" text="Nama Pemain" prefWidth="150"/>
                <TableColumn fx:id="colPlayerNo" text="No. Punggung" prefWidth="100"/>
                <TableColumn fx:id="colPlayerPos" text="Posisi" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Separator/>
        
        <Label text="Form Pemain"/>
        <GridPane hgap="10" vgap="10">
            <TextField fx:id="tfPlayerName" promptText="Nama Lengkap" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="tfPlayerNo" promptText="Nomor Punggung (Angka)" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="tfPlayerPos" promptText="Posisi (Cth: Center)" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
        </GridPane>
        
        <HBox spacing="10">
            <Button text="Simpan Pemain" onAction="#addPlayer" style="-fx-base: #3498db;"/>
            <Button text="Update Pemain" onAction="#updatePlayer" style="-fx-base: #f39c12;"/>
            <Button text="Hapus Pemain" onAction="#deletePlayer" style="-fx-base: #c0392b;"/>
            <Button text="Clear" onAction="#clearPlayerForm"/>
        </HBox>
    </VBox>

</SplitPane>