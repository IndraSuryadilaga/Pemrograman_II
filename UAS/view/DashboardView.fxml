<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.DashboardController" 
      spacing="20" 
      stylesheets="@application.css"
      style="-fx-padding: 30;">
    
    <HBox spacing="20">
        <VBox styleClass="card" minWidth="300">
            <Label text="Turnamen Sedang Berjalan" styleClass="text-muted"/>
            <Label fx:id="lblActiveTournament" text="Memuat..." styleClass="text-big"/>
            <Label fx:id="lblSportType" text="-" style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </VBox>
        
        <VBox styleClass="card" minWidth="250">
             <Label text="Total Pertandingan" styleClass="text-muted"/>
             <Label fx:id="lblTotalMatches" text="0" styleClass="text-big"/>
        </VBox>
    </HBox>

    <Separator/>
    
    <Label text="Visual Bracket (Live)" styleClass="label-header"/>

    <ScrollPane fitToHeight="true" vbarPolicy="NEVER" 
                style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
        <HBox fx:id="bracketContainer" spacing="60" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            </HBox>
    </ScrollPane>
    
</VBox>