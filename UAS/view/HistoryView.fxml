<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="12.0" style="-fx-background-color: white;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HistoryController">
    
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 8 16; -fx-background-color: #375999;">
        <VBox>
            <Label text="Riwayat Pertandingan" textFill="WHITE">
                <font>
                   <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

   <VBox minHeight="300.0" style="-fx-padding: 12 24;">
      <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Detail Statistik Pemain (Box Score)" />
            <Label style="-fx-padding: 0 0 8 0;" text="Klik baris tabel untuk melihat detail statistik pemain" textFill="#00000099" />
      
             <TableView fx:id="tableHistory" prefHeight="250">
              <columns>
                  <TableColumn fx:id="colTournament" prefWidth="150" text="Nama Turnamen" />
                  <TableColumn fx:id="colRound" prefWidth="100" style="-fx-alignment: CENTER;" text="Babak" />
                  
                  <TableColumn fx:id="colHome" prefWidth="120" style="-fx-font-weight: bold; -fx-alignment: CENTER-RIGHT;" text="Tim Home" />
                  <TableColumn fx:id="colScore" prefWidth="80" style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #2980b9;" text="Skor" />
                  <TableColumn fx:id="colAway" prefWidth="120" style="-fx-font-weight: bold; -fx-alignment: CENTER-LEFT;" text="Tim Away" />
                  
                  <TableColumn fx:id="colTime" prefWidth="120" style="-fx-alignment: CENTER;" text="Waktu" />
              </columns>
              <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
      </children>
   </VBox>
    
    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
        
        <VBox style="-fx-padding: 8 16; -fx-background-color: white;">
            <Label fx:id="lblDetailHome" style="-fx-padding: 0 0 8 0; -fx-font-weight: bold; -fx-text-fill: #2980b9; -fx-max-width: Infinity;" text="Statistik Home" />
            
            <TableView fx:id="tableHomeStats" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colHNum" prefWidth="40" style="-fx-alignment: CENTER;" text="Number" />
                    
                    <TableColumn fx:id="colHName" prefWidth="150" text="Nama Pemain" />
                    <TableColumn fx:id="colHPoint" prefWidth="60" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Poin" />
                    <TableColumn fx:id="colHFoul" prefWidth="60" style="-fx-alignment: CENTER;" text="Foul" />
                </columns>
                <columnResizePolicy>
                   <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox style="-fx-padding: 12 24; -fx-background-color: white;">
            <Label fx:id="lblDetailAway" style="-fx-padding: 0 0 8 0; -fx-font-weight: bold; -fx-text-fill: #c0392b; -fx-max-width: Infinity;" text="Statistik Away" />
            
            <TableView fx:id="tableAwayStats" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colANum" prefWidth="40" style="-fx-alignment: CENTER;" text="Number" />
                    
                    <TableColumn fx:id="colAName" prefWidth="150" text="Nama Pemain" />
                    <TableColumn fx:id="colAPoint" prefWidth="60" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Poin" />
                    <TableColumn fx:id="colAFoul" prefWidth="60" style="-fx-alignment: CENTER;" text="Foul" />
                </columns>
                <columnResizePolicy>
                   <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </SplitPane>
     
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 12 24;">
         <Button onAction="#handleExportPDF" style="-fx-label-padding: 8 24; -fx-background-color: red; -fx-font-weight: bold; -fx-background-radius: 8;" text="ðŸ–¨ï¸ Export PDF" textFill="WHITE" />
         <Button onAction="#loadHistory" style="-fx-label-padding: 8 24; -fx-font-weight: bold; -fx-background-radius: 8;" text="ðŸ”„ Refresh" />
     </HBox>

</VBox>
