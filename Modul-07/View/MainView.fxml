<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Modul_07.Controller.MainController">
   <children>
      <TabPane layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Data Pelanggan">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                           <children>
                              <Label text="Nama:" />
                              <TextField fx:id="tfNamaPelanggan" promptText="Contoh: Budi Santoso" />
                              
                              <Label text="Email:" />
                              <TextField fx:id="tfEmailPelanggan" promptText="nama@email.com" />
                 
                              <Label text="Telepon:" />
                              <TextField fx:id="tfTeleponPelanggan" promptText="08xxxxxxxxxx" />
                              
                              <AnchorPane prefHeight="40.0">
                                 <children>
                                    <Button fx:id="btnAddPelanggan" layoutX="0.0" text="Add" />
                                    <Button fx:id="btnEditPelanggan" layoutX="50.0" text="Edit" />
                                    <Button fx:id="btnDeletePelanggan" layoutX="100.0" text="Delete" />
                                 </children>
                              </AnchorPane>
                           </children>
                        </VBox>
                        
                        <TableView fx:id="tablePelanggan" layoutX="250.0" layoutY="20.0" prefHeight="500.0" prefWidth="500.0">
                           <columns>
                            <TableColumn fx:id="colNamaPelanggan" prefWidth="150.0" text="Nama" />
                            <TableColumn fx:id="colEmailPelanggan" prefWidth="150.0" text="Email" />
                            <TableColumn fx:id="colTeleponPelanggan" prefWidth="100.0" text="Telepon" />
                          </columns>
                       </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          
          <Tab text="Data Buku">
            <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                           <children>
                              <Label text="Judul Buku:" />
                              <TextField fx:id="tfJudulBuku" promptText="Judul Buku..." />
                              
                              <Label text="Penulis:" />
                              <TextField fx:id="tfPenulisBuku" promptText="Nama Penulis..." />
                              
                              <Label text="Harga:" />
                              <TextField fx:id="tfHargaBuku" promptText="Contoh: 50000" />
                              
                              <Label text="Stok:" />
                              <TextField fx:id="tfStokBuku" promptText="Contoh: 10" />
                              
                              <AnchorPane prefHeight="40.0">
                                 <children>
                                    <Button fx:id="btnAddBuku" layoutX="0.0" text="Add" />
                                    <Button fx:id="btnEditBuku" layoutX="50.0" text="Edit" />
                                    <Button fx:id="btnDeleteBuku" layoutX="100.0" text="Delete" />
                                 </children>
                              </AnchorPane>
                           </children>
                        </VBox>
                        
                        <TableView fx:id="tableBuku" layoutX="250.0" layoutY="20.0" prefHeight="500.0" prefWidth="494.0">
                          <columns>
                            <TableColumn fx:id="colJudulBuku" prefWidth="150.0" text="Judul" />
                            <TableColumn fx:id="colPenulisBuku" prefWidth="120.0" text="Penulis" />
                            <TableColumn fx:id="colHargaBuku" prefWidth="100.0" text="Harga" />
                            <TableColumn fx:id="colStokBuku" prefWidth="70.0" text="Stok" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
             </content>
          </Tab>
          
          <Tab text="Data Penjualan">
             <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                           <children>
                              <Label text="Nama Pelanggan:" />
                              <TextField fx:id="tfNamaPelangganJual" promptText="Ketik nama pelanggan..." />
                              
                              <Label text="Judul Buku:" />
                              <TextField fx:id="tfJudulBukuJual" promptText="Ketik judul buku..." />
                              
                              <Label text="Jumlah:" />
                              <TextField fx:id="tfJumlahJual" promptText="Jumlah beli..." />
                              
                              <Label text="Tanggal (YYYY-MM-DD):" />
                              <TextField fx:id="tfTanggalJual" promptText="YYYY-MM-DD" />
                              
                              <AnchorPane prefHeight="40.0">
                                 <children>
                                    <Button fx:id="btnAddPenjualan" layoutX="0.0" text="Add Transaksi" />
                                    <Button fx:id="btnDeletePenjualan" layoutX="100.0" text="Delete" />
                                 </children>
                              </AnchorPane>
                           </children>
                        </VBox>
                       
                        <TableView fx:id="tablePenjualan" layoutX="250.0" layoutY="20.0" prefHeight="500.0" prefWidth="497.0">
                          <columns>
                            <TableColumn fx:id="colPelangganJual" prefWidth="80.0" text="Pelanggan" />
                            <TableColumn fx:id="colBukuJual" prefWidth="80.0" text="Buku" />
                            <TableColumn fx:id="colJumlahJual" prefWidth="60.0" text="Jml" />
                            <TableColumn fx:id="colTotalJual" prefWidth="100.0" text="Total Harga" />
                            <TableColumn fx:id="colTanggalJual" prefWidth="100.0" text="Tanggal" />
                          </columns>
                        </TableView>
                     </children>
                </AnchorPane>
             </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>